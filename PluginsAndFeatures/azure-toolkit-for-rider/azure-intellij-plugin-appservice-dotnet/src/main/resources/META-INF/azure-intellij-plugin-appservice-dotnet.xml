<idea-plugin>
    <depends>Docker</depends>

    <extensions defaultExtensionNs="com.microsoft.tooling.msservices.intellij.azure">
        <actions implementation="com.microsoft.azure.toolkit.intellij.appservice.AppServiceRiderActionsContributor"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="com.microsoft.azure.toolkit.intellij.legacy.webapp.runner.webappconfig.WebAppConfigurationType"/>
        <configurationType implementation="com.microsoft.azure.toolkit.intellij.legacy.webapp.runner.webappcontainers.WebAppContainersConfigurationType"/>
        <configurationType implementation="com.microsoft.azure.toolkit.intellij.legacy.function.runner.AzureFunctionConfigurationType"/>
    </extensions>

    <actions>
        <action id="Actions.WebAppDeployAction" class="com.microsoft.azure.toolkit.intellij.legacy.webapp.action.DeployWebAppAction"
                text="Deploy to Azure Web Apps..." description="Deploy selected module to Azure WebApp"
                icon="/icons/WebApp/Deploy.svg">
        </action>
        <action id="Actions.WebAppContainersDeployAction" class="com.microsoft.azure.toolkit.intellij.legacy.webapp.action.DeployWebAppContainersAction"
                text="Deploy to Azure Web Apps for Containers..." description="Deploy image to Azure WebApp"
                icon="/icons/WebApp/Deploy.svg">
        </action>
    </actions>
</idea-plugin>